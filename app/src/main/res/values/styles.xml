<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/PoppinsFontStyle</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/light_coral</item>
        <item name="colorControlActivated">@color/_light_green</item>
    </style>

    <style name="PoppinsFontStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

</resources>